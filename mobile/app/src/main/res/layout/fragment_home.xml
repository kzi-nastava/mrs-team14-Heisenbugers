<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <!-- MAP -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.gotaximobile.fragments.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEstimateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardElevation="6dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvEstimatePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: -"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvEstimateDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: -"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvEstimateEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETA: -"
                android:textSize="13sp"/>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEstimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Estimate ride"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_pindrop"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@color/text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
