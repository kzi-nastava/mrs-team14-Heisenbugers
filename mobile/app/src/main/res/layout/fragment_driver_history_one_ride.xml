<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/table_bg">

    <androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        android:padding="16dp"
        tools:context=".fragments.DriverHistoryOneRideFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fragment_bg"
            android:padding="16dp"
            android:elevation="4dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@drawable/table_bg">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Start: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/start_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="End: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/end_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Time on the road: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/time_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Price: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/price_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Rating: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rating_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Cancelled: "
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/cancelled_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/secondary_text"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Passengers:"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TableLayout
                    android:id="@+id/passengers_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_bg"
                    android:padding="8dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:gravity="end"
                            android:text="Korisnik Korisnikovic"
                            android:textColor="@color/secondary_text"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Korisnik Drugi Korisnikovic"
                            android:textColor="@color/secondary_text"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:layout_gravity="end"
                            android:text="Treci Korisnikovic"
                            android:textColor="@color/secondary_text"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Korisnik Cetvrti Korisnikovic"
                            android:textColor="@color/secondary_text"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/violations_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Traffic violations:"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/violations_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:chipSpacing="8dp" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/was_panic_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/danger"
                app:chipStrokeColor="@color/danger"
                app:chipBackgroundColor="@color/item_bg_pressed"
                android:text="WAS PANIC"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rate_ride_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Ride"
                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/colorPrimary"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
