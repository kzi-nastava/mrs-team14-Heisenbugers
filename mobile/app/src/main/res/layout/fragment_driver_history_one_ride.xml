<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DriverHistoryOneRideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Driver: "
                    android:textStyle="bold" />

                <TextView
                    android:text="Vozac Vozacovic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Start: "
                    android:textStyle="bold" />

                <TextView
                    android:text="Bul. despota Stefana 17"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="End: "
                    android:textStyle="bold" />

                <TextView
                    android:text="Bul. Cara Lazara 35"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Time on the road: "
                    android:textStyle="bold" />

                <TextView
                    android:text="10:30 - 11:50"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Price: "
                    android:textStyle="bold" />

                <TextView
                    android:text="350 RSD"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Rating: "
                    android:textStyle="bold" />

                <TextView
                    android:text="3 stars"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="@dimen/text_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Cancelled: "
                    android:textStyle="bold" />

                <TextView
                    android:text="No"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/text_margin" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Passengers:"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/text_margin">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:text="Korisnik Korisnikovic"
                        android:layout_margin="@dimen/text_margin" />

                    <TextView
                        android:text="Korisnik Drugi Korisnikovic"
                        android:layout_margin="@dimen/text_margin" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:text="Korisnik Treci Korisnikovic"
                        android:layout_margin="@dimen/text_margin" />

                    <TextView
                        android:text="Korisnik Cetvrti Korisnikovic"
                        android:layout_margin="@dimen/text_margin" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Traffic violations:"
                android:layout_margin="@dimen/text_margin"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:layout_marginHorizontal="@dimen/text_margin" />
        </LinearLayout>

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/danger"
            app:chipStrokeColor="@color/danger"
            app:chipBackgroundColor="@color/item_bg_pressed"
            android:text="WAS PANIC" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>