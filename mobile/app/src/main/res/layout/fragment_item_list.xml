<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnSortDate"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sort_by_date"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:background="@drawable/button_outline_selector"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/btnSortPrice"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sort_by_price"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:background="@drawable/button_outline_selector"
                android:textColor="@color/button_text_selector" />

            <Button
                android:id="@+id/btnSortPlace"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sort_by_place"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@drawable/button_outline_selector"
                android:textColor="@color/button_text_selector" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.gotaximobile.fragments.RideFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".fragments.RideFragment"
            tools:listitem="@layout/fragment_item" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>



